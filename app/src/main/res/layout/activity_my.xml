    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtStation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wetterstation 1 "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txtTemperature1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/TemperatureLabel"
            android:textSize="16dp"
            android:layout_below="@+id/txtStation1"/>
        <TextView
            android:id="@+id/txtTemperature1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/txtTemperature1Label"
            android:layout_below="@+id/txtStation1"
            android:text="@string/ValueNotAvailable"
            android:textSize="16dp"/>
        </RelativeLayout>


</LinearLayout>
